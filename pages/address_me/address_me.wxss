.add-btn{
  position: fixed;
  bottom: 0;
  width: 100vw;
}

.add-btn .btn{
  width: 100%;
  height: 120rpx;
  background-color: #bb3a29;
  display: flex;
  justify-content: center;
  margin-top: 3rpx;
}
.add-btn .btn .icon{
  align-self: center;
  width: 56rpx;
  height: 56rpx;
}
.add-btn .btn .name{
  align-self: center;
  font-size: 36rpx;
  color: #fff;
}

.item{
  width: 100vm;
  display: flex;
}

.item .area{
  flex: 1;
  height: 130rpx;
}
.item .area .cell{
  height: 130rpx;
  width: 100vw;
  z-index: 999;
  background-color: #fff;
  display: flex;
  justify-content: center;
  
}
.item .area .cell .address{
  display: flex;
  border-bottom: 1rpx solid #eee;
  width: 96%;
}
.item .area .cell .address .left{
  width: 80%;
}
.item .area .cell .address .left .left-1{
  display: flex;
  padding:10rpx;
  align-items: center;
}
.item .area .cell .address .left .left-1 .nickname{
  font-size: 32rpx;
}
.item .area .cell .address .left .left-1 .telephone{
  font-size: 26rpx;
  margin-left:10rpx;
  color: #7c7c7c;
}
.item .area .cell .address .left .left-2{             
  display: flex;
  padding: 10rpx;
  align-items:center
}
.item .area .cell .address .left .left-2 .tag{
  width: 15%;
}
.item .area .cell .address .left .left-2 .address-info{
  flex:1;
  font-size: 26rpx;
}
.item .area .cell .address .left .left-2 .address-info-new{
  flex:1;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.item .area .cell .address .right{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item .area .cell .address .right image{
  width: 40rpx;
  height: 40rpx;
} 
.item .del-btn{
  width: 200rpx;
  font-size: 36rpx;
  display: flex;
  line-height: 130rpx;
  justify-content: center;
  letter-spacing: 5rpx;
  background-color: red;
  color: #fff;
}