.tab-bar {

  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 48px; */
  display: flex;
  /* padding-bottom: env(safe-area-inset-bottom); */
  background-color: #cc543a;
  padding: 40rpx 0rpx 40rpx 0rpx;

}

.tab-bar-border {
  border-width: 2rpx;
  border-style: solid;
  border-top-color:#efdeb0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  /* height: 0.05rpx; */
  /* transform: scaleY(0.5); */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

